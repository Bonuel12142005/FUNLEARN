<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard - FUNLEARN</title>
    <link rel="stylesheet" href="/tailwind.css">
</head>
<body class="bg-gray-50">
    {{> header}}

    <div class="container mx-auto px-6 py-8">
        <!-- Success Message -->
        {{#if successMessage}}
        <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg flex items-center justify-between">
            <div class="flex items-center">
                <i class="fas fa-check-circle text-green-500 mr-3"></i>
                <span>{{successMessage}}</span>
            </div>
            <button onclick="this.parentElement.style.display='none'" class="text-green-700 hover:text-green-900">
                <i class="fas fa-times"></i>
            </button>
        </div>
        {{/if}}

        <h1 class="text-4xl font-bold mb-8">Teacher Dashboard</h1>

        <!-- Stats -->
        <div class="grid md:grid-cols-5 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">My Classes</p>
                        <p class="text-3xl font-bold text-blue-600">{{classStats.total}}</p>
                    </div>
                    <div class="text-4xl">üë•</div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">My Courses</p>
                        <p class="text-3xl font-bold text-purple-600">{{courseStats.total}}</p>
                    </div>
                    <div class="text-4xl">üìö</div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Published Courses</p>
                        <p class="text-3xl font-bold text-green-600">{{courseStats.published}}</p>
                    </div>
                    <div class="text-4xl">‚úÖ</div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Draft Courses</p>
                        <p class="text-3xl font-bold text-orange-600">{{courseStats.draft}}</p>
                    </div>
                    <div class="text-4xl">üìù</div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm">Total Students</p>
                        <p class="text-3xl font-bold text-blue-600">{{classStats.total_students}}</p>
                    </div>
                    <div class="text-4xl">üéì</div>
                </div>
            </div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <!-- My Classes -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold">My Classes</h2>
                    <a href="/teacher/classes/create" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                        + New Class
                    </a>
                </div>

                {{#if classes.length}}
                <div class="space-y-4">
                    {{#each classes}}
                    <div class="border rounded-lg p-4 hover:bg-gray-50">
                        <div class="flex justify-between items-start">
                            <div class="flex-1">
                                <div class="flex items-center space-x-2 mb-2">
                                    <h3 class="font-bold text-lg">{{this.class_name}}</h3>
                                    {{#if this.is_active}}
                                    <span class="px-2 py-1 bg-green-100 text-green-600 text-xs rounded font-semibold">Active</span>
                                    {{else}}
                                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded font-semibold">Inactive</span>
                                    {{/if}}
                                </div>
                                <p class="text-sm text-gray-600 mb-2">{{this.description}}</p>
                                <p class="text-xs text-gray-500">
                                    Code: <span class="font-mono font-bold">{{this.class_code}}</span> ‚Ä¢ 
                                    {{this.student_count}} students
                                    {{#if this.academic_year}} ‚Ä¢ {{this.academic_year}}{{/if}}
                                    {{#if this.semester}} {{this.semester}}{{/if}}
                                </p>
                            </div>
                            <a href="/teacher/classes/{{this.id}}" 
                                class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">
                                View
                            </a>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <p class="text-gray-500 text-center py-8">No classes yet. Create your first class!</p>
                {{/if}}
            </div>

            <!-- My Courses -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold">My Courses</h2>
                    <div class="flex items-center space-x-3">
                        <a href="/teacher/courses" class="px-4 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 text-sm">
                            View All
                        </a>
                        <a href="/teacher/courses/create" class="px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700">
                            + New Course
                        </a>
                    </div>
                </div>

                {{#if courses.length}}
                <div class="space-y-4">
                    {{#each courses}}
                    <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                        <div class="flex justify-between items-start">
                            <div class="flex-1">
                                <div class="flex items-center space-x-2 mb-2">
                                    <h3 class="font-bold text-lg">{{this.title}}</h3>
                                    {{#if this.is_published}}
                                    <span class="px-2 py-1 bg-green-100 text-green-600 text-xs rounded font-semibold">Published</span>
                                    {{else}}
                                    <span class="px-2 py-1 bg-orange-100 text-orange-600 text-xs rounded font-semibold">Draft</span>
                                    {{/if}}
                                </div>
                                <div class="flex items-center space-x-4 text-sm text-gray-600 mb-2">
                                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">{{this.category}}</span>
                                    <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded capitalize">{{this.difficulty_level}}</span>
                                    <span class="text-gray-500">Created: {{this.created_at}}</span>
                                </div>
                            </div>
                            <div class="flex items-center space-x-2">
                                <a href="/teacher/courses/{{this.id}}/edit" 
                                    class="px-3 py-2 bg-purple-600 text-white rounded hover:bg-purple-700 text-sm">
                                    <i class="fas fa-edit mr-1"></i>Edit
                                </a>
                                <a href="/teacher/courses" 
                                    class="px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">
                                    <i class="fas fa-eye mr-1"></i>View
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    
                    {{#if (gt courses.length 5)}}
                    <div class="text-center pt-4">
                        <a href="/teacher/courses" class="text-purple-600 hover:text-purple-800 font-semibold">
                            View all {{courses.length}} courses ‚Üí
                        </a>
                    </div>
                    {{/if}}
                </div>
                {{else}}
                <div class="text-center py-12">
                    <div class="text-6xl mb-4 opacity-50">üìö</div>
                    <p class="text-gray-500 mb-4">No courses yet. Create your first course!</p>
                    <a href="/teacher/courses/create" class="px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-semibold">
                        <i class="fas fa-plus mr-2"></i>Create Your First Course
                    </a>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</body>
</html>
