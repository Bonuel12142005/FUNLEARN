<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress Tracking - {{classData.class_name}} - FUNLEARN</title>
    <link rel="stylesheet" href="/tailwind.css">
    <link rel="stylesheet" href="/funlearn-styles.css">
</head>
<body class="bg-gray-50">
    {{> header}}

    <div class="container mx-auto px-6 py-8">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-4xl font-bold text-gray-800">Progress Tracking</h1>
                <p class="text-gray-600 mt-2">{{classData.class_name}} - Monitor student progress and performance</p>
            </div>
            <a href="/teacher/classes/{{classData.id}}" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-2"></i>Back to Class
            </a>
        </div>

        <!-- Success/Error Messages -->
        {{#if successMessage}}
        <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg flex items-center justify-between">
            <div class="flex items-center">
                <i class="fas fa-check-circle text-green-500 mr-3"></i>
                <span>{{successMessage}}</span>
            </div>
            <button onclick="this.parentElement.style.display='none'" class="text-green-700 hover:text-green-900">
                <i class="fas fa-times"></i>
            </button>
        </div>
        {{/if}}

        {{#if errorMessage}}
        <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg flex items-center justify-between">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle text-red-500 mr-3"></i>
                <span>{{errorMessage}}</span>
            </div>
            <button onclick="this.parentElement.style.display='none'" class="text-red-700 hover:text-red-900">
                <i class="fas fa-times"></i>
            </button>
        </div>
        {{/if}}

        <!-- Progress Overview -->
        <div class="grid md:grid-cols-4 gap-6 mb-8">
            <div class="stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="stat-label">Total Students</p>
                        <p class="stat-value text-blue-600">{{classData.students.length}}</p>
                    </div>
                    <div class="text-4xl opacity-20">ðŸ‘¥</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="stat-label">Average Progress</p>
                        <p class="stat-value text-green-600">{{classStats.average_progress}}%</p>
                    </div>
                    <div class="text-4xl opacity-20">ðŸ“Š</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="stat-label">Completed Lessons</p>
                        <p class="stat-value text-purple-600">{{classStats.total_lessons_completed}}</p>
                    </div>
                    <div class="text-4xl opacity-20">âœ…</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="stat-label">Active This Week</p>
                        <p class="stat-value text-orange-600">{{classStats.active_this_week}}</p>
                    </div>
                    <div class="text-4xl opacity-20">ðŸ”¥</div>
                </div>
            </div>
        </div>

        <!-- Student Progress List -->
        <div class="card p-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">ðŸ“ˆ Student Progress</h2>
            
            {{#if classData.students.length}}
                <div class="space-y-4">
                    {{#each classData.students}}
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold">
                                    {{substring this.first_name 0 1}}{{substring this.last_name 0 1}}
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-800">{{this.first_name}} {{this.last_name}}</h3>
                                    <p class="text-sm text-gray-500">{{this.email}}</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-6">
                                <div class="text-center">
                                    <p class="text-sm text-gray-500">Progress</p>
                                    <div class="w-24 bg-gray-200 rounded-full h-2 mt-1">
                                        <div class="bg-blue-600 h-2 rounded-full progress-bar-fill" data-progress="{{this.progress}}"></div>
                                    </div>
                                    <p class="text-xs text-gray-600 mt-1">{{this.progress}}%</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-sm text-gray-500">XP</p>
                                    <p class="font-bold text-blue-600">{{this.xp}}</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-sm text-gray-500">Level</p>
                                    <p class="font-bold text-purple-600">{{this.level}}</p>
                                </div>
                                <a href="/teacher/classes/{{../classData.id}}/students/{{this.id}}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye mr-1"></i>Details
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            {{else}}
                <div class="text-center py-12">
                    <div class="text-6xl mb-4 opacity-50">ðŸ“Š</div>
                    <p class="text-gray-500">No student progress data available</p>
                </div>
            {{/if}}
        </div>
    </div>

    <style>
        .progress-bar-fill {
            width: 0%;
            transition: width 1s ease-in-out;
        }
    </style>

    <script>
        // Add interactive animations and functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Animate progress bars
            document.querySelectorAll('.progress-bar-fill').forEach(bar => {
                const progress = bar.getAttribute('data-progress');
                setTimeout(() => {
                    bar.style.width = progress + '%';
                }, 100);
            });
            // Add hover effects to student cards
            document.querySelectorAll('.border-gray-200').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                    this.style.boxShadow = '0 4px 12px rgba(0, 0, 0, 0.1)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '';
                });
            });

            // Auto-hide success/error messages after 5 seconds
            const messages = document.querySelectorAll('.bg-green-100, .bg-red-100');
            messages.forEach(message => {
                setTimeout(() => {
                    message.style.opacity = '0';
                    setTimeout(() => {
                        message.style.display = 'none';
                    }, 300);
                }, 5000);
            });

            // Add loading state to Details buttons
            document.querySelectorAll('a[href*="/students/"]').forEach(button => {
                button.addEventListener('click', function() {
                    const originalText = this.innerHTML;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i>Loading...';
                    
                    // Reset after a delay in case navigation fails
                    setTimeout(() => {
                        this.innerHTML = originalText;
                    }, 3000);
                });
            });
        });

        // Function to refresh progress data
        function refreshProgress() {
            window.location.reload();
        }

        // Function to export progress data
        function exportProgress() {
            // TODO: Implement export functionality
            alert('Export functionality coming soon!');
        }
    </script>
</body>
</html>