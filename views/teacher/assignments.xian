<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignments - {{classData.class_name}} - FUNLEARN</title>
    <link rel="stylesheet" href="/tailwind.css">
    <link rel="stylesheet" href="/funlearn-styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body class="bg-gray-50">
    {{> header}}

    <div class="container mx-auto px-6 py-8">
        <!-- Navigation -->
        <div class="flex items-center space-x-2 text-sm text-gray-500 mb-6">
            <a href="/teacher/dashboard" class="hover:text-blue-600">Dashboard</a>
            <i class="fas fa-chevron-right text-xs"></i>
            <a href="/teacher/classes" class="hover:text-blue-600">Classes</a>
            <i class="fas fa-chevron-right text-xs"></i>
            <a href="/teacher/classes/{{classData.id}}" class="hover:text-blue-600">{{classData.class_name}}</a>
            <i class="fas fa-chevron-right text-xs"></i>
            <span class="text-gray-800">Assignments</span>
        </div>

        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-4xl font-bold text-gray-800">üìù Assignments</h1>
                <p class="text-gray-600 mt-2">{{classData.class_name}} - Create and manage assignments</p>
            </div>
            <div class="flex items-center space-x-3">
                <a href="/teacher/classes/{{classData.id}}/manage" class="btn btn-secondary">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Management
                </a>
                <button class="btn btn-primary" onclick="showCreateAssignmentModal()">
                    <i class="fas fa-plus mr-2"></i>New Assignment
                </button>
            </div>
        </div>

        <!-- Assignment Stats -->
        <div class="grid md:grid-cols-4 gap-6 mb-8">
            <div class="stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="stat-label">Total Assignments</p>
                        <p class="stat-value text-blue-600">{{assignments.length}}</p>
                    </div>
                    <div class="text-4xl opacity-20">üìù</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="stat-label">Active</p>
                        <p class="stat-value text-green-600">{{assignmentStats.active}}</p>
                    </div>
                    <div class="text-4xl opacity-20">‚úÖ</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="stat-label">Total Submissions</p>
                        <p class="stat-value text-purple-600">{{assignmentStats.total_submissions}}</p>
                    </div>
                    <div class="text-4xl opacity-20">üì§</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="stat-label">Pending Review</p>
                        <p class="stat-value text-orange-600">{{assignmentStats.pending_review}}</p>
                    </div>
                    <div class="text-4xl opacity-20">‚è≥</div>
                </div>
            </div>
        </div>

        <!-- Assignments List -->
        <div class="card p-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Assignment List</h2>
            
            {{#if assignments.length}}
            <div class="space-y-4">
                {{#each assignments}}
                <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <div class="flex items-center space-x-3 mb-2">
                                <h3 class="text-xl font-semibold text-gray-800">{{this.title}}</h3>
                                <span class="px-3 py-1 
                                    {{#eq this.status 'published'}}bg-green-100 text-green-800{{/eq}}
                                    {{#eq this.status 'draft'}}bg-yellow-100 text-yellow-800{{/eq}}
                                    {{#eq this.status 'closed'}}bg-gray-100 text-gray-800{{/eq}}
                                    text-sm rounded-full font-semibold">
                                    {{#eq this.status 'published'}}Active{{/eq}}
                                    {{#eq this.status 'draft'}}Draft{{/eq}}
                                    {{#eq this.status 'closed'}}Closed{{/eq}}
                                </span>
                            </div>
                            <p class="text-gray-600 mb-3">{{this.description}}</p>
                            <div class="flex items-center space-x-6 text-sm text-gray-500">
                                {{#if this.due_date_formatted}}
                                <span><i class="fas fa-calendar mr-1"></i>Due: {{this.due_date_formatted}}</span>
                                {{/if}}
                                <span><i class="fas fa-users mr-1"></i>{{this.submission_count}} submissions</span>
                                <span><i class="fas fa-star mr-1"></i>{{this.xp_reward}} XP</span>
                                <span><i class="fas fa-trophy mr-1"></i>{{this.max_points}} pts</span>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <a href="/teacher/classes/{{../classData.id}}/assignments/{{this.id}}" class="btn btn-secondary btn-sm">
                                <i class="fas fa-eye mr-1"></i>View
                            </a>
                            <a href="/teacher/classes/{{../classData.id}}/assignments/{{this.id}}/edit" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit mr-1"></i>Edit
                            </a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <div class="text-center py-12">
                <div class="text-6xl mb-4 opacity-50">üìù</div>
                <p class="text-gray-500 mb-4">No assignments yet</p>
                <p class="text-gray-400 text-sm mb-6">Create your first assignment to get started</p>
                <button onclick="showCreateAssignmentModal()" class="btn btn-primary">
                    <i class="fas fa-plus mr-2"></i>Create First Assignment
                </button>
            </div>
            {{/if}}
        </div>
    </div>

    <!-- Create Assignment Modal -->
    <div id="createAssignmentModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
        <div class="bg-white rounded-2xl p-8 max-w-2xl w-full mx-4 shadow-2xl max-h-[90vh] overflow-y-auto">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-2xl font-bold text-gray-800">Create New Assignment</h3>
                <button onclick="hideCreateAssignmentModal()" class="text-gray-400 hover:text-gray-600 text-2xl">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <form action="/teacher/classes/{{classData.id}}/assignments" method="POST" class="space-y-6">
                <div>
                    <label class="form-label">Assignment Title *</label>
                    <input type="text" name="title" required class="form-input" placeholder="e.g., JavaScript Quiz">
                </div>
                
                <div>
                    <label class="form-label">Description</label>
                    <textarea name="description" rows="4" class="form-input" placeholder="Describe the assignment..."></textarea>
                </div>
                
                <div>
                    <label class="form-label">Instructions</label>
                    <textarea name="instructions" rows="3" class="form-input" placeholder="Detailed instructions for students..."></textarea>
                </div>
                
                <div class="grid md:grid-cols-2 gap-4">
                    <div>
                        <label class="form-label">Due Date</label>
                        <input type="datetime-local" name="due_date" class="form-input">
                    </div>
                    <div>
                        <label class="form-label">Max Points</label>
                        <input type="number" name="max_points" class="form-input" value="100" min="1">
                    </div>
                </div>
                
                <div class="grid md:grid-cols-2 gap-4">
                    <div>
                        <label class="form-label">XP Reward</label>
                        <input type="number" name="xp_reward" class="form-input" value="50" min="0">
                    </div>
                    <div>
                        <label class="form-label">Assignment Type</label>
                        <select name="assignment_type" class="form-input">
                            <option value="homework">Homework</option>
                            <option value="quiz">Quiz</option>
                            <option value="project">Project</option>
                            <option value="exam">Exam</option>
                            <option value="discussion">Discussion</option>
                        </select>
                    </div>
                </div>
                
                <div class="space-y-3">
                    <label class="flex items-center">
                        <input type="checkbox" name="allow_late_submission" value="true" checked class="mr-2">
                        <span class="text-gray-700">Allow late submissions</span>
                    </label>
                    <div class="ml-6">
                        <label class="form-label">Late Penalty (%)</label>
                        <input type="number" name="late_penalty" class="form-input w-24" value="10" min="0" max="100">
                    </div>
                </div>
                
                <div class="flex items-center justify-end space-x-3 pt-4 border-t">
                    <button type="button" onclick="hideCreateAssignmentModal()" class="btn btn-secondary">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus mr-2"></i>Create Assignment
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showCreateAssignmentModal() {
            document.getElementById('createAssignmentModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function hideCreateAssignmentModal() {
            document.getElementById('createAssignmentModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Close modal when clicking outside
        document.getElementById('createAssignmentModal').addEventListener('click', function(e) {
            if (e.target === this) {
                hideCreateAssignmentModal();
            }
        });

        // Add interactive animations
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects to assignment cards
            document.querySelectorAll('.border-gray-200').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
</body>
</html>