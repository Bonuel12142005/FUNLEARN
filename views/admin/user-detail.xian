<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details - FUNLEARN Admin</title>
    <link rel="stylesheet" href="/tailwind.css">
    <link rel="stylesheet" href="/funlearn-styles.css">
</head>
<body class="bg-gray-50">
    {{> header}}

    <div class="container mx-auto px-6 py-8">
        <!-- Page Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-bold text-gray-900 mb-2">üë§ User Details</h1>
                    <p class="text-gray-600">View and manage user information</p>
                </div>
                <a href="/admin/users" class="btn btn-secondary">
                    ‚Üê Back to Users
                </a>
            </div>
        </div>

        <div class="grid lg:grid-cols-3 gap-8">
            <!-- User Profile Card -->
            <div class="lg:col-span-1">
                <div class="card p-6">
                    <div class="text-center mb-6">
                        <div class="w-24 h-24 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full mx-auto mb-4 flex items-center justify-center text-white text-3xl font-bold">
                            {{substring viewedUser.first_name 0 1}}{{substring viewedUser.last_name 0 1}}
                        </div>
                        <h2 class="text-2xl font-bold text-gray-900">{{viewedUser.first_name}} {{viewedUser.last_name}}</h2>
                        <p class="text-gray-600">@{{viewedUser.username}}</p>
                        <div class="mt-3">
                            <span class="px-3 py-1 rounded-full text-sm font-semibold
                                {{#eq viewedUser.role 'admin'}}bg-red-100 text-red-800{{/eq}}
                                {{#eq viewedUser.role 'teacher'}}bg-blue-100 text-blue-800{{/eq}}
                                {{#eq viewedUser.role 'student'}}bg-green-100 text-green-800{{/eq}}">
                                {{viewedUser.role}}
                            </span>
                        </div>
                    </div>

                    <div class="space-y-3 border-t pt-4">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Status:</span>
                            <span class="font-semibold {{#if viewedUser.is_active}}text-green-600{{else}}text-red-600{{/if}}">
                                {{#if viewedUser.is_active}}Active{{else}}Inactive{{/if}}
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Level:</span>
                            <span class="font-semibold">{{viewedUser.level}}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">XP:</span>
                            <span class="font-semibold">{{viewedUser.xp}}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">User ID:</span>
                            <span class="font-semibold">#{{viewedUser.id}}</span>
                        </div>
                    </div>

                    <div class="mt-6 space-y-2">
                        <button class="btn btn-primary w-full" onclick="editUser()">
                            ‚úèÔ∏è Edit User
                        </button>
                        <button class="btn btn-danger w-full" onclick="deleteUser()">
                            üóëÔ∏è Delete User
                        </button>
                    </div>
                </div>
            </div>

            <!-- User Information -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Contact Information -->
                <div class="card p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">üìß Contact Information</h3>
                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <label class="text-sm text-gray-600">Email</label>
                            <p class="font-semibold">{{viewedUser.email}}</p>
                        </div>
                        <div>
                            <label class="text-sm text-gray-600">Username</label>
                            <p class="font-semibold">{{viewedUser.username}}</p>
                        </div>
                    </div>
                </div>

                <!-- Account Statistics -->
                <div class="card p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">üìä Statistics</h3>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        <div class="text-center p-4 bg-blue-50 rounded-lg">
                            <div class="text-2xl font-bold text-blue-600">{{viewedUser.level}}</div>
                            <div class="text-sm text-gray-600">Level</div>
                        </div>
                        <div class="text-center p-4 bg-purple-50 rounded-lg">
                            <div class="text-2xl font-bold text-purple-600">{{viewedUser.xp}}</div>
                            <div class="text-sm text-gray-600">Total XP</div>
                        </div>
                        <div class="text-center p-4 bg-green-50 rounded-lg">
                            <div class="text-2xl font-bold text-green-600">0</div>
                            <div class="text-sm text-gray-600">Completed</div>
                        </div>
                        <div class="text-center p-4 bg-yellow-50 rounded-lg">
                            <div class="text-2xl font-bold text-yellow-600">0</div>
                            <div class="text-sm text-gray-600">Badges</div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="card p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">üìÖ Recent Activity</h3>
                    <div class="text-center py-8 text-gray-500">
                        <div class="text-4xl mb-2">üìä</div>
                        <p>No recent activity</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function editUser() {
            alert('Edit functionality coming soon!');
        }

        function deleteUser() {
            if (confirm('Are you sure you want to delete this user?')) {
                fetch('/admin/users/{{viewedUser.id}}', {
                    method: 'DELETE'
                }).then(() => {
                    window.location.href = '/admin/users';
                });
            }
        }
    </script>
</body>
</html>
