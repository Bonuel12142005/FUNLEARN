<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Badges - FUNLEARN Admin</title>
    <link rel="stylesheet" href="/tailwind.css">
    <link rel="stylesheet" href="/funlearn-styles.css">
</head>
<body class="bg-gray-50">
    {{> header}}

    <div class="container mx-auto px-6 py-8">
        <!-- Page Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-bold text-gray-900 mb-2">ğŸ† Manage Badges</h1>
                    <p class="text-gray-600">Create and manage achievement badges</p>
                </div>
                <button onclick="showCreateModal()" class="btn btn-primary">
                    â• Create Badge
                </button>
            </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="stat-card">
                <div class="stat-label">Total Badges</div>
                <div class="stat-value text-blue-600">{{badges.length}}</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Common</div>
                <div class="stat-value text-gray-600">0</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Rare</div>
                <div class="stat-value text-purple-600">0</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Epic</div>
                <div class="stat-value text-yellow-600">0</div>
            </div>
        </div>

        <!-- Badges Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{#each badges}}
            <div class="card p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-start justify-between mb-4">
                    <div class="text-5xl">ğŸ†</div>
                    <span class="px-3 py-1 rounded-full text-xs font-semibold
                        {{#eq this.rarity 'common'}}bg-gray-100 text-gray-800{{/eq}}
                        {{#eq this.rarity 'rare'}}bg-purple-100 text-purple-800{{/eq}}
                        {{#eq this.rarity 'epic'}}bg-yellow-100 text-yellow-800{{/eq}}
                        {{#eq this.rarity 'legendary'}}bg-red-100 text-red-800{{/eq}}">
                        {{this.rarity}}
                    </span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">{{this.name}}</h3>
                <p class="text-gray-600 text-sm mb-4">{{this.description}}</p>
                <div class="flex items-center justify-between pt-4 border-t">
                    <span class="text-sm text-gray-500">{{this.xp_reward}} XP</span>
                    <div class="space-x-2">
                        <button onclick="editBadge({{this.id}})" class="text-blue-600 hover:text-blue-800">
                            âœï¸
                        </button>
                        <button onclick="deleteBadge({{this.id}})" class="text-red-600 hover:text-red-800">
                            ğŸ—‘ï¸
                        </button>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-span-full text-center py-12">
                <div class="text-6xl mb-4 opacity-50">ğŸ†</div>
                <p class="text-gray-500 mb-4">No badges created yet</p>
                <button onclick="showCreateModal()" class="btn btn-primary">
                    Create First Badge
                </button>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Create Badge Modal -->
    <div id="createModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-2xl p-8 max-w-md w-full mx-4">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Create New Badge</h2>
            <form action="/admin/badges" method="POST">
                <div class="space-y-4">
                    <div>
                        <label class="form-label">Badge Name *</label>
                        <input type="text" name="name" class="form-input" required>
                    </div>
                    <div>
                        <label class="form-label">Description *</label>
                        <textarea name="description" class="form-input" rows="3" required></textarea>
                    </div>
                    <div>
                        <label class="form-label">Rarity *</label>
                        <select name="rarity" class="form-input" required>
                            <option value="common">Common</option>
                            <option value="rare">Rare</option>
                            <option value="epic">Epic</option>
                            <option value="legendary">Legendary</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">XP Reward *</label>
                        <input type="number" name="xp_reward" class="form-input" value="10" required>
                    </div>
                </div>
                <div class="flex items-center justify-end space-x-4 mt-6">
                    <button type="button" onclick="hideCreateModal()" class="btn btn-secondary">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Create Badge
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showCreateModal() {
            document.getElementById('createModal').classList.remove('hidden');
        }

        function hideCreateModal() {
            document.getElementById('createModal').classList.add('hidden');
        }

        function editBadge(id) {
            alert('Edit functionality coming soon!');
        }

        function deleteBadge(id) {
            if (confirm('Are you sure you want to delete this badge?')) {
                fetch(`/admin/badges/${id}`, {
                    method: 'DELETE'
                }).then(() => {
                    location.reload();
                });
            }
        }
    </script>
</body>
</html>
