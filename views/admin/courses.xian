<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Courses - Admin - FUNLEARN</title>
    <link rel="stylesheet" href="/tailwind.css">
    <link rel="stylesheet" href="/funlearn-styles.css">
</head>
<body class="bg-gray-50">
    {{> header}}

    <div class="container mx-auto px-6 py-8">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-4xl font-bold text-gray-800">Manage Courses</h1>
                <p class="text-gray-600 mt-2">Create, edit, and manage learning courses</p>
            </div>
            <button class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>Create Course
            </button>
        </div>

        <!-- Courses List -->
        <div class="card p-6">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-800">ðŸ“š All Courses</h2>
                <div class="flex items-center space-x-3">
                    <input type="search" placeholder="Search courses..." class="form-input w-64">
                    <select class="form-input w-40">
                        <option>All Categories</option>
                        <option>Programming</option>
                        <option>Mathematics</option>
                        <option>Science</option>
                    </select>
                </div>
            </div>
            
            {{#if courses.length}}
                <div class="grid gap-6">
                    {{#each courses}}
                    <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <div class="flex items-center space-x-4">
                                    <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center text-white text-2xl">
                                        ðŸ“š
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-semibold text-gray-800">{{this.title}}</h3>
                                        <p class="text-gray-600 mt-1">{{this.description}}</p>
                                        <div class="flex items-center space-x-4 mt-2">
                                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm">
                                                {{this.category}}
                                            </span>
                                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm">
                                                {{this.difficulty_level}}
                                            </span>
                                            <span class="text-sm text-gray-500">
                                                {{this.lessons_count}} lessons
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="flex items-center space-x-2">
                                <button class="btn btn-secondary btn-sm">
                                    <i class="fas fa-edit mr-1"></i>Edit
                                </button>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye mr-1"></i>View
                                </button>
                                <button class="btn btn-secondary btn-sm text-red-600">
                                    <i class="fas fa-trash mr-1"></i>Delete
                                </button>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            {{else}}
                <div class="text-center py-12">
                    <div class="text-6xl mb-4 opacity-50">ðŸ“š</div>
                    <p class="text-gray-500 mb-4">No courses found</p>
                    <button class="btn btn-primary">
                        <i class="fas fa-plus mr-2"></i>Create First Course
                    </button>
                </div>
            {{/if}}
        </div>
    </div>
</body>
</html>