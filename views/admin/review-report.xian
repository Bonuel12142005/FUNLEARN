<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Review Report - DOH Sanitation System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-20px);
      }
    }
    
    .animate-fadeInUp {
      animation: fadeInUp 0.8s ease-out forwards;
    }
    
    .animate-float {
      animation: float 3s ease-in-out infinite;
    }
    
    .glass {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .glass-hover:hover {
      background: rgba(255, 255, 255, 0.15);
      transform: translateY(-5px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .action-button:hover {
      transform: translateY(-2px) scale(1.05);
      transition: all 0.3s ease;
    }
  </style>
</head>
<body class="bg-gradient-to-br from-indigo-900 via-indigo-700 to-indigo-500 min-h-screen text-white"></body>
  <!-- Navigation -->
  <nav class="glass sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-6 py-4">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center shadow-2xl">
            <svg class="w-7 h-7 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
            </svg>
          </div>
          <div>
            <h1 class="text-xl font-bold">DOH Review</h1>
            <p class="text-xs opacity-80">Report System</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/admin/dashboard" class="glass glass-hover px-6 py-2.5 rounded-lg font-semibold transition-all duration-300 inline-flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <span>Dashboard</span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="max-w-7xl mx-auto px-6 py-20 text-center">
    <div class="animate-fadeInUp">
      <div class="inline-block glass px-6 py-2 rounded-full mb-8">
        <span class="text-sm font-semibold">üîç Department of Health - Report Review</span>
      </div>
      
      <h1 class="text-5xl md:text-7xl font-extrabold leading-tight mb-6">
        Report<br/>
        <span class="bg-gradient-to-r from-indigo-200 to-white bg-clip-text text-transparent">
          Review
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl text-indigo-100 max-w-3xl mx-auto mb-10 leading-relaxed">
        Comprehensive review and validation of sanitation inspection reports
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-6 pb-8">
    <!-- Report Header Section -->
    <section class="mb-16">
      <div class="glass glass-hover rounded-2xl p-8 transition-all duration-300">
        <div class="w-16 h-16 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h2 class="text-3xl font-bold mb-3">Report #{{report.id}} - {{report.reportType}}</h2>
        <p class="text-indigo-100 mb-8 leading-relaxed">Detailed inspection report requiring administrative review and validation.</p>
        
        <!-- Report Details Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div class="glass rounded-xl p-6">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-gradient-to-br from-purple-400 to-purple-600 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold">Inspector Information</h3>
            </div>
            <p class="text-indigo-200 text-sm mb-2">Inspector</p>
            <p class="text-white font-bold text-xl">{{report.inspector.fullName}}</p>
          </div>

          <div class="glass rounded-xl p-6">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold">Current Status</h3>
            </div>
            <p class="text-indigo-200 text-sm mb-2">Status</p>
            <span class="bg-gradient-to-r from-yellow-500/20 to-yellow-600/20 text-yellow-200 px-4 py-2 rounded-full text-lg font-semibold border border-yellow-400/30">{{report.status}}</span>
          </div>

          <div class="glass rounded-xl p-6">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold">Location Details</h3>
            </div>
            <p class="text-indigo-200 text-sm mb-2">Address</p>
            <p class="text-white font-bold">{{report.address}}</p>
            <p class="text-indigo-300">{{report.barangay}}, {{report.municipality}}</p>
          </div>

          <div class="glass rounded-xl p-6">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold">GPS Coordinates</h3>
            </div>
            <p class="text-indigo-200 text-sm mb-2">Coordinates</p>
            <p class="text-white font-bold">{{report.latitude}}, {{report.longitude}}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Report Data Section -->
    <section class="mb-16">
      <div class="glass glass-hover rounded-2xl p-8 transition-all duration-300">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-400 to-blue-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-3">Report Data</h3>
        <p class="text-indigo-100 mb-6 leading-relaxed">Detailed inspection data and findings from the field report.</p>
        <div class="glass rounded-lg p-6 border border-white/10">
          {{#if report.reportData}}
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {{#each report.reportData}}
            <div class="bg-white/5 rounded-lg p-4 border border-white/10">
              <h4 class="text-indigo-200 text-sm font-medium mb-2">
                {{#if (eq @key 'establishmentName')}}Establishment Name
                {{else if (eq @key 'establishmentType')}}Establishment Type
                {{else if (eq @key 'sanitaryPermit')}}Sanitary Permit Status
                {{else if (eq @key 'foodHandlers')}}Number of Food Handlers
                {{else if (eq @key 'toiletFacilities')}}Toilet Facilities
                {{else if (eq @key 'rating')}}Overall Rating
                {{else if (eq @key 'findings')}}Inspection Findings
                {{else if (eq @key 'householdHead')}}Household Head
                {{else if (eq @key 'occupants')}}Number of Occupants
                {{else if (eq @key 'toiletType')}}Toilet Type
                {{else if (eq @key 'waterSource')}}Water Source
                {{else if (eq @key 'wasteDisposal')}}Waste Disposal Method
                {{else if (eq @key 'compliance')}}Compliance Status
                {{else if (eq @key 'observations')}}Observations & Recommendations
                {{else if (eq @key 'sourceType')}}Source Type
                {{else if (eq @key 'waterQuality')}}Water Quality Assessment
                {{else if (eq @key 'protection')}}Protection Status
                {{else if (eq @key 'householdsServed')}}Households Served
                {{else if (eq @key 'chlorination')}}Chlorination Status
                {{else if (eq @key 'maintenance')}}Maintenance Status
                {{else if (eq @key 'recommendations')}}Recommendations & Action Items
                {{else if (eq @key 'facilityType')}}Facility Type
                {{else if (eq @key 'operationalStatus')}}Operational Status
                {{else if (eq @key 'assessment')}}Facility Assessment & Recommendations
                {{else}}{{@key}}{{/if}}
              </h4>
              <p class="text-white font-medium">
                {{#if (eq @key 'sanitaryPermit')}}
                  {{#if (eq this 'valid')}}‚úÖ Valid Permit
                  {{else if (eq this 'expired')}}‚ö†Ô∏è Expired Permit
                  {{else if (eq this 'pending')}}üîÑ Pending Application
                  {{else if (eq this 'none')}}‚ùå No Permit
                  {{else}}{{this}}{{/if}}
                {{else if (eq @key 'rating')}}
                  {{#if (eq this 'excellent')}}‚≠ê Excellent (90-100%)
                  {{else if (eq this 'good')}}üëç Good (80-89%)
                  {{else if (eq this 'satisfactory')}}‚úì Satisfactory (70-79%)
                  {{else if (eq this 'needs_improvement')}}‚ö†Ô∏è Needs Improvement (60-69%)
                  {{else if (eq this 'poor')}}‚ùå Poor (Below 60%)
                  {{else}}{{this}}{{/if}}
                {{else if (eq @key 'compliance')}}
                  {{#if (eq this 'fully_compliant')}}‚úÖ Fully Compliant
                  {{else if (eq this 'partially_compliant')}}‚ö†Ô∏è Partially Compliant
                  {{else if (eq this 'non_compliant')}}‚ùå Non-compliant
                  {{else}}{{this}}{{/if}}
                {{else if (eq @key 'waterQuality')}}
                  {{#if (eq this 'safe')}}‚úÖ Safe for drinking
                  {{else if (eq this 'needs_treatment')}}‚ö†Ô∏è Needs treatment
                  {{else if (eq this 'unsafe')}}‚ùå Unsafe for consumption
                  {{else if (eq this 'needs_testing')}}üî¨ Requires laboratory testing
                  {{else}}{{this}}{{/if}}
                {{else if (eq @key 'operationalStatus')}}
                  {{#if (eq this 'fully_operational')}}‚úÖ Fully Operational
                  {{else if (eq this 'partially_operational')}}‚ö†Ô∏è Partially Operational
                  {{else if (eq this 'non_operational')}}‚ùå Non-operational
                  {{else}}{{this}}{{/if}}
                {{else}}{{this}}{{/if}}
              </p>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="text-center py-8">
            <div class="w-16 h-16 bg-gray-400/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <p class="text-indigo-300">No inspection data available for this report.</p>
          </div>
          {{/if}}
        </div>
      </div>
    </section>

    <!-- Admin Review Section -->
    <section class="mb-16">
      <div class="glass glass-hover rounded-2xl p-8 transition-all duration-300">
        <div class="w-16 h-16 bg-gradient-to-br from-purple-400 to-purple-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-3">Administrative Review</h3>
        <p class="text-indigo-100 mb-6 leading-relaxed">Provide feedback and make a decision on this inspection report.</p>
        
        <div class="mb-8">
          <label for="feedback" class="block text-indigo-200 text-sm font-medium mb-3">Review Feedback</label>
          <textarea 
            id="feedback" 
            class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-indigo-300 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-transparent backdrop-blur-sm" 
            rows="4" 
            placeholder="Enter detailed feedback for the inspector...">{{report.adminFeedback}}</textarea>
        </div>

        <!-- Action Buttons -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <button onclick="reviewReport('review')" class="action-button bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl inline-flex items-center justify-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Under Review</span>
          </button>
          
          <button onclick="reviewReport('approve')" class="action-button bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl inline-flex items-center justify-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Approve</span>
          </button>
          
          <button onclick="reviewReport('return')" class="action-button bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl inline-flex items-center justify-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2M3 12l6.414 6.414a2 2 0 001.414.586H19a2 2 0 002-2V7a2 2 0 00-2-2h-8.172a2 2 0 00-1.414.586L3 12z"/>
            </svg>
            <span>Return</span>
          </button>
          
          <button onclick="reviewReport('reject')" class="action-button bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl inline-flex items-center justify-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Reject</span>
          </button>
        </div>
      </div>
    </section>
  </div>

  <!-- Footer -->
  <footer class="glass mt-12">
    <div class="max-w-7xl mx-auto px-6 py-8 text-center">
      <p class="text-lg font-semibold mb-2">Department of Health</p>
      <p class="text-indigo-100 mb-4">Republic of the Philippines</p>
      <p class="text-sm text-indigo-200">¬© 2025 DOH Sanitation Monitoring System. All rights reserved.</p>
    </div>
  </footer>

  <script>
    async function reviewReport(action) {
      const feedback = document.getElementById('feedback').value;
      
      // Show loading state
      const buttons = document.querySelectorAll('.action-button');
      buttons.forEach(btn => {
        btn.disabled = true;
        btn.style.opacity = '0.6';
      });

      try {
        const response = await fetch('/admin/report/{{report.id}}/review', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ action, feedback })
        });

        if (response.ok) {
          // Show success message with better styling
          const successDiv = document.createElement('div');
          successDiv.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
          successDiv.innerHTML = '‚úÖ Report reviewed successfully!';
          document.body.appendChild(successDiv);
          
          setTimeout(() => {
            window.location.href = '/admin/dashboard';
          }, 1500);
        } else {
          throw new Error('Failed to review report');
        }
      } catch (error) {
        // Show error message
        const errorDiv = document.createElement('div');
        errorDiv.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
        errorDiv.innerHTML = '‚ùå Failed to review report';
        document.body.appendChild(errorDiv);
        
        // Re-enable buttons
        buttons.forEach(btn => {
          btn.disabled = false;
          btn.style.opacity = '1';
        });
        
        setTimeout(() => {
          document.body.removeChild(errorDiv);
        }, 3000);
      }
    }
  </script>
</body>
</html>
