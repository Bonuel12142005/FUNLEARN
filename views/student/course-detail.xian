<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{course.title}} - FUNLEARN</title>
    <link rel="stylesheet" href="/tailwind.css">
</head>
<body class="bg-gray-50">
    {{> header}}

    <div class="container mx-auto px-6 py-8">
        <!-- Course Header -->
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg p-8 mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-bold mb-2">{{course.title}}</h1>
                    <p class="text-blue-100 mb-4">{{course.description}}</p>
                    <div class="flex items-center space-x-4">
                        <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">
                            {{course.difficulty_level}}
                        </span>
                        <span class="text-sm">‚≠ê {{course.total_xp}} XP</span>
                        <span class="text-sm">üìö {{course.modules.length}} Modules</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Course Content -->
        <div class="grid md:grid-cols-3 gap-8">
            <!-- Modules & Lessons -->
            <div class="md:col-span-2">
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-2xl font-bold mb-6">Course Content</h2>
                    
                    {{#each course.modules}}
                    <div class="mb-6">
                        <div class="flex items-center justify-between mb-3">
                            <h3 class="text-xl font-semibold">{{this.title}}</h3>
                            {{#if this.is_locked}}
                            <span class="text-gray-400">üîí Locked</span>
                            {{/if}}
                        </div>
                        <p class="text-gray-600 text-sm mb-4">{{this.description}}</p>
                        
                        <div class="space-y-2 ml-4">
                            {{#each this.lessons}}
                            <div class="flex items-center justify-between p-3 border rounded hover:bg-gray-50">
                                <div class="flex items-center space-x-3">
                                    <span class="text-2xl">
                                        {{#eq this.content_type "video"}}üé•{{/eq}}
                                        {{#eq this.content_type "quiz"}}üìù{{/eq}}
                                        {{#eq this.content_type "game"}}üéÆ{{/eq}}
                                        {{#eq this.content_type "text"}}üìñ{{/eq}}
                                    </span>
                                    <div>
                                        <p class="font-semibold">{{this.title}}</p>
                                        <p class="text-xs text-gray-500">{{this.content_type}} ‚Ä¢ {{this.xp_reward}} XP</p>
                                    </div>
                                </div>
                                <a href="/student/lessons/{{this.id}}" 
                                    class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">
                                    Start
                                </a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Progress -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-xl font-bold mb-4">Your Progress</h3>
                    <div class="mb-4">
                        <div class="flex justify-between text-sm mb-2">
                            <span>Completion</span>
                            <span class="font-semibold">0%</span>
                        </div>
                        <div class="bg-gray-200 rounded-full h-3">
                            <div class="bg-blue-600 h-3 rounded-full" style="width: 0%"></div>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600">Complete lessons to earn XP and unlock badges!</p>
                </div>

                <!-- Course Info -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-xl font-bold mb-4">Course Info</h3>
                    <div class="space-y-3 text-sm">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Category</span>
                            <span class="font-semibold">{{course.category}}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Duration</span>
                            <span class="font-semibold">{{course.estimated_duration}} min</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Total XP</span>
                            <span class="font-semibold text-yellow-600">‚≠ê {{course.total_xp}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
